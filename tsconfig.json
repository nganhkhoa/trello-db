{
   "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "allowJs": true,
      "target": "es6",
      "module": "commonjs",
      "lib": [
         "es6",
         "dom"
      ],
      "baseUrl": "./src",
      "paths": {
         "@/*": ["*"],
         "@api/*": ["api/*"],
         "@models": ["models"],
         "@models/*": ["models/*"],
         "@utils/*": ["utils/*"],
         "@config": ["config"],
         "@config/*": ["config/*"]
      }
   },
   "exclude": [
      "node_modules"
   ],
   "include": [
      "src/**/*"
   ]
   
}
